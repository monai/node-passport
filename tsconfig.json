{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "allowJs": true,
    // "checkJs": true,

    "outDir": "dist"
  },
  "include": [
    "bin/**/*",
    "cmd/**/*",
    "lib/**/*",
    "test/**/*",
    "test-*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  }
}
